[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    alembic/versions,
    build,
    dist
ignore = 
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
per-file-ignores =
    __init__.py:F401

